<p id="notice"><%= notice %></p>

<p>
  <strong>Model:</strong>
  <%= @car.model %>
</p>

<p>
  <strong>Make:</strong>
  <%= @car.make %>
</p>

<p>
  <strong>Color:</strong>
  <%= @car.color %>
</p>

<p>
  <strong>Mileage:</strong>
  <%= @car.mileage %>
</p>

<p>
  <strong>Is for sale:</strong>
  <%= @car.is_for_sale %>
</p>

<%= link_to 'Edit', edit_car_path(@car) %> |
<%= link_to 'Back', cars_path %>

<p>
  <strong>Ownership:</strong>
</p>

<% @car.people.each do |owner| %>
  <p>
    <%= link_to owner.name, person_path(owner) %>
  </p>
  <p>
    Email: <%= owner.email %>
  </p>
  <p>
    Phone Number: <%= owner.phone_number %>
  </p>
<% end %>

<%= link_to 'Add New Owner', new_person_path(:car => @car) %>
