<header class="masthead">
  <div class="mx-auto text-center p-5">
    <p id="notice" class="text-white"><%= notice %></p>
  </div>
  <div class="container d-flex h-50 align-items-center">


    <div class="mx-auto text-center">
      <h1 class="mx-auto my-0 p-5">Personal Details</h1>
    </div>

    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone number</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= @person.name %></td>
          <td><%= @person.email %></td>
          <td><%= @person.phone_number %></td>
          <td><%= link_to 'Edit', edit_person_path(@person) %></td>
          <td><%= link_to 'Delete', @person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <% if @person.cars.count > 0 %>
    <div class="container d-flex h-30 align-items-center">
      <div class="mx-auto text-center">
        <h1 class="mx-auto my-0 p-5">Ownership History</h1>
        <%= link_to 'Add New Car', new_car_path(:person => @person), :class => "btn btn-primary js-scroll-trigger"  %>
      </div>

      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Model</th>
            <th scope="col">Make</th>
            <th scope="col">Color</th>
            <th scope="col">Mileage</th>
            <th scope="col">For sale?</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @person.cars.each do |car| %>
            <tr>
              <td><%= car.model %></td>
              <td><%= car.make %></td>
              <td><%= car.color %></td>
              <td><%= car.mileage %></td>
              <% if car.is_for_sale %>
                <td><span class="glyphicon glyphicon-ok"></span></td>
              <% else %>
                <td><span class="glyphicon glyphicon-remove"></span></td>
              <% end %>
              <td><%= link_to 'Details', car %></td>
              <td><%= link_to 'Edit', edit_car_path(car) %></td>
              <td><%= link_to 'Delete', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="container d-flex h-30 align-items-center">
      <div class="mx-auto text-center">
        <h1 class="mx-auto my-0 p-5">No Cars Owned Yet!</h1>
        <%= link_to 'Add New Car', new_car_path(:person => @person), :class => "btn btn-primary js-scroll-trigger"  %>
      </div>
    </div>
  <% end %>

</header>
